root = true

# Глобальні налаштування, що будуть записані для всіх файлів.
[*]
charset = utf-8
# На Unix системах застосовується lf для переводу рядка.
# Це, також, вимога стандарта PSR.
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Можно задать индивидуальные настройки как для типов файлов,
# так и отдельных файлов по имени.
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{yml,yaml,vue,js,html}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[lib/**.js]
indent_style = space
indent_size = 2

[*.{php,html,twig}]
indent_style = space
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0
